<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="22dp"
    android:background="#F7F8FA"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.DocumentPickerActivity">

    <!-- Heading -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identity Verification"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Aadhaar Front Side to Continue"
        android:textSize="14sp"
        android:textColor="#6D6D6D"
        android:layout_marginBottom="28dp" />

    <!-- Card for Image Preview -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/documentCard"
        android:layout_width="260dp"
        android:layout_height="330dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="18dp"
        app:strokeWidth="1dp"
        app:strokeColor="#C9CBD2">

        <ImageView
            android:id="@+id/documentImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:src="@drawable/ic_identity_verification"
            android:scaleType="centerCrop" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Upload Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/pickAadhaarBtn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Upload Aadhaar Image"
        android:textColor="#FFFFFF"
        android:layout_marginTop="32dp"
        app:cornerRadius="16dp"
        android:backgroundTint="#0078FF" />


    <!-- Continue -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueBtn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Proceed â†’"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00C853"
        android:layout_marginTop="14dp"
        app:cornerRadius="16dp"
        android:visibility="gone"/>
</LinearLayout>